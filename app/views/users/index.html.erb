  <% @users.each do |user| %>
  <% if user.present? %>
    <% if user.id != current_user.id %>
      <li>
        <div class="item">
          <% if user.name.present? %>
          <p class="link3"><%= user.name %></p>
          <% end %>
          
             <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post, class: "mes green" %>
            </div>
          
      </li>
    
    <% end %>
  <% end %>
  <% end %>
</div>
